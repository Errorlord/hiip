<h1>Listing All Articles</h1>
<p>
<%= link_to "Create a new article", new_article_path %>
</p>

<div class="container">
<table>
  <div class="row">
    <tr>
        <div class="col-2"><th>Title</th></div>
        <div class="col-2"><th>Description</th></div>
    </tr>
  </div>
  <% @articles.each do |f| %>
    <div class="row">
      <tr>
        <td><%= f.title %></td>
        <td><%= f.description %></td>
        <td><%= link_to "Edit", edit_article_path(f) %></td>
        <td><%= link_to "Show", article_path(f) %></td>
        <td><%= link_to "Destroy", article_path(f), method: :delete, data: {confirm: "Are you sure?"} %></td>
      </tr>
    </div>
  <% end %>
</table>
</div>