<% if @path.errors.any? %>
    <h2>The following errors prevented the path from being created</h2>
    <ul>
        <% @path.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>

<%= form_for @path do |f| %>
  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </p>
  
  <p>
    <%= f.label :content %><br/>
    <%= f.text_area :content %>
  </p>
  
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to "Back to path listing", paths_path %>