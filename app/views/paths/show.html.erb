<style type="text/css">
  td, th {
    padding: 5px;
  }
</style>

<h1>Showing selected path</h1>

<p>Title: <%= @path.title %></p>
<p>content: <%= @path.content %></p>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Position</th>
  </tr>
  <% string = @path.position.to_s + "." %>
  <% @paths.each do |f| %>
    <% stringTwo = f.position %>
    <% if !stringTwo.index(string).nil? %>
      <tr>
        <td><%= f.title %></td>
        <td><%= f.content %></td>
        <td><%= f.position %></td>
        <td><%= link_to "Edit", edit_path_path(f) %></td>
        <td><%= link_to "Show", path_path(f) %></td>
        <td><%= link_to "Destroy", path_path(f), method: :delete, data: {confirm: "Are you sure?"}%></td>
    </tr>
    <% end %>
  <% end %>
</table>


<%= link_to "Edit this path", edit_path_path(@path) %>
<%= link_to "Back to path listing", paths_path %>
<%= link_to "Create path", { :controller => "paths", :action => "new", :parent => @path }  %>